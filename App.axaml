<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AvaloniaUITheSeriesFBDRM"
             x:Class="AvaloniaUITheSeriesFBDRM.App"
             RequestedThemeVariant="Default">
<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://AvaloniaUITheSeriesFBDRM/Assets/Icons.axaml" />
        <StyleInclude Source="avares://AvaloniaUITheSeriesFBDRM/Templates/ContentExample.axaml" />
    </Application.Styles>

</Application>
